{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "papertracker",
  "version": "0.1.0",
  "identifier": "com.papertracker.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "papertracker",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/window_icon.png"
    ],
    "resources": [
      "assets/*"
    ]
  }
}
